/* pages/menu/detail/detail.wxss */

.dish-img {
  height: 620rpx;
  width: 100%;
}

.dish-name-box {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: flex-start;
  min-height: 90rpx;
  width: 92%;
  padding: 30rpx;
  color: #f55356;
  font-size: 32rpx;
  position: relative;
}

.dish-content-text {
  margin-top: 30rpx;
  font-size: 28rpx;
  color: #333;
}

.add-btn {
  text-align: right;
  position: absolute;
  align-self: flex-end;
  left: 70%;
  bottom: 0;
}

.item-delete {
  display: flex;
  justify-content: space-between;
  width: 200rpx;
  align-items: center;
  padding-bottom: 10rpx;
  color: #666;
  font-size: 32rpx;
}

.dish-add-img {
  height: 74rpx;
  width: 196rpx;
}

.container-box {
  overflow-y: scroll;
  padding-bottom: 100rpx;
}

.animation {
  position: absolute;
  z-index: 4;
  left: 0;
  top: 0;
}

.pay {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0rpx;
  z-index: 8;
}
