/* pages/order/detail/detail.wxss */

.detail-header-box {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  color: #5292fa;
  font-size: 36rpx;
  width: 100%;
}

.cancel-box {
  width: 170rpx;
  height: 58rpx;
  color: #848484;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  border: 1rpx #848484 solid;
  border-radius: 5px;
}

.item-box {
  width: 97%;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  border-radius: 5rpx;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  padding-bottom: 10rpx;
}

.address-box {
  height: 136rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #333;
  font-size: 32rpx;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.address-text-box {
  display: flex;
  flex-direction: column;
  width: 80%;
  justify-content: flex-start;
  color: #333;
  font-size: 32rpx;
}

.address-content-text {
  color: #666;
  font-size: 26rpx;
  margin-top: 18rpx;
}

.choose-text {
  flex-grow: 1;
  color: #333;
  font-size: 28rpx;
  margin-right: 20rpx;
  text-align: right;
}

.item-foot {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font-size: 28rpx;
  color: #000;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.pay {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  display: block;
}

.detail-left {
  padding-left: 90rpx;
  margin-bottom: 15rpx;
}

.detail-right {
  padding-right: 30rpx;
}

.lobby-hint-text {
  color: #2e2e2e;
  text-align: center;
}

.common-margin {
  margin-top: 20rpx;
}

.qr-box {
  padding-top: 24rpx;
  border-top: 1rpx #d2d2d2 solid;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 92%;
  margin-top: 30rpx;
  margin-bottom: -50rpx;
  margin-left: 20rpx;
}

.qr-img {
  width: 480rpx;
  height: 480rpx;
}

.expand-box {
  display: flex;
  flex-direction: row;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.widget-box {
  /*border-bottom: solid 1rpx #d8d8d8;*/
  justify-content: flex-start;
}

.border-bottom {
  border-bottom: 1rpx solid #f0f0f0;
}

.height-98 {
  height: 98rpx;
  padding: 0;
}

.hint-text {
  width: 205rpx;
  flex: 0 1 auto;
}
