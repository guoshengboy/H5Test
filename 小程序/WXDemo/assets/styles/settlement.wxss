.settlement-box {
  display: flex;
  width: 100%;
  height: 100rpx;
  position: fixed;
  left: 0;
  right: 0;
  bottom: 0;
  background: #fff;
  border-top: solid 1rpx #d8d8d8;
  justify-content: space-between;
  align-items: center;
}

.settlement-num {
  min-width: 34rpx;
  height: 34rpx;
  line-height: 34rpx;
  border-radius: 50%;
  border: solid 1rpx white;
  overflow: hidden;
  text-align: center;
  /*-moz-border-radius: 50%;
  -webkit-border-radius: 19rpx;*/
  background: #f55356;
  align-self: flex-start;
  position: absolute;
  left: 65rpx;
  top: 15rpx;
  font-size: 24rpx;
  color: #fff;
  padding: 3rpx;
}

.popup-item-box {
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 32rpx;
  color: #333;
  padding-left: 30rpx;
  padding-right: 30rpx;
  height: 98rpx;
  width: 92%;
  border: 1rpx #d9d9dc solid;
  background: #fff;
}

.popup-item-price {
  flex-grow: 1;
  color: #f55356;
}

.popup-item-num {
  width: 70rpx;
  text-align: center;
  color: #666;
  flex: 0 0 auto;
}

.popup-header-line {
  margin-left: 26rpx;
  background: #2a2a2a;
  height: 32rpx;
  width: 4rpx;
  margin-right: 20rpx;
}

.popup-header-img {
  height: 26rpx;
  width: 26rpx;
  margin-right: 8rpx;
}

.popup-header-clear {
  font-size: 24rpx;
  margin-right: 30rpx;
}

.popup-box {
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  height: 100%;
}

.popup-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 78rpx;
  background: #f1f1f1;
  width: 100%;
}

.popup-scroll {
  overflow-y: scroll;
  max-height: 700rpx;
}
