.prompt-container {
    display: flex;
    height: 100%;
    align-items: center;
    justify-content: center;
    color: #acacac;
    padding-top: 200rpx;
}

.prompt-message {
    margin-top: 0;
    text-align: center;
}

.prompt-message .prompt-icon {
    margin-bottom: 38rpx;
}

.prompt-message .prompt-text {
    font-size: 32rpx;
    margin: 2px 0;
}

.prompt-message .prompt-button-area .prompt-button {
    font-size: 13px;
    line-height: 2;
}

.prompt-message .prompt-button-area .prompt-button {
    margin: 4px auto;
    width: 100px;
    padding: 2px 0;
    border: 1rpx solid #eee;
}

.prompt-message .prompt-button-area .prompt-button:after {
    display: none;
}