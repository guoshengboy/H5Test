/* pages/my/my.wxss */

.header-box {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 440rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
}

.header-img {
  height: 440rpx;
  width: 100%;
  z-index: 5;
}

.person-img {
  width: 190rpx;
  height: 190rpx;
  border-radius: 95rpx;
  border: solid 2rpx white;
  overflow: hidden;
  text-align: center;
  -moz-border-radius: 95rpx;
  -webkit-border-radius: 95rpx;
  z-index: 6;
}

.name-text {
  font-size: 36rpx;
  color: #fff;
  margin-top: 30rpx;
  z-index: 6;
}

.content-box {
  width: 100%;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  background-color: #fff;
  border-bottom: 1px solid #d8d8d8;
}

.content-img {
  height: 49rpx;
  width: 49rpx;
  margin-right: 20rpx;
  margin-left: 40rpx;
}

.content-arrow {
  height: 26rpx;
  width: 16rpx;
  margin-right: 40rpx;
}

.logout-box {
  width: 600rpx;
  height: 90rpx;
  border-bottom: 1px solid #d8d8d8;
  align-items: center;
  justify-content: center;
  display: flex;
  flex-direction: row;
  margin-top: 38rpx;
  font-size: 32rpx;
  color: #373737;
  background-color: #fff;
}

.edit-img {
  width: 46rpx;
  height: 46rpx;
  position: absolute;
  z-index: 7;
  left: 56%;
  top: 24%;
}
