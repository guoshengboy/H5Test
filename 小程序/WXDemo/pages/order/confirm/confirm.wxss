/* pages/order/confirm/confirm.wxss */

.item-box {
  width: 97%;
  margin-bottom: 10rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
  margin-top: 10rpx;
  border-radius: 5rpx;
  background: white;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.address-box {
  height: 136rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  color: #333;
  font-size: 32rpx;
  align-items: center;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.address-text-box {
  display: flex;
  flex-direction: column;
  width: 80%;
  justify-content: flex-start;
  color: #333;
  font-size: 32rpx;
}

.address-content-text {
  color: #666;
  font-size: 26rpx;
  margin-top: 18rpx;
}

.choose-text {
  flex-grow: 1;
  color: #999;
  font-size: 28rpx;
  margin-right: 20rpx;
  text-align: right;
}

.item-foot {
  height: 80rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  align-items: center;
  font-size: 28rpx;
  color: #000;
  padding-left: 20rpx;
  padding-right: 20rpx;
}

.pay {
  width: 100%;
  height: 98rpx;
  position: fixed;
  bottom: 0rpx;
  z-index: 8;
}

.hos-block-box {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  height: 100%;
  flex-grow: 1;
}

.hos-picker-text {
  width: 100%;
  display: inline-block;
  text-align: left;
}

.picker-text {
  color: #666;
}
