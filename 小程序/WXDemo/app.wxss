/**app.wxss**/
@import 'assets/styles/prompt.wxss';
@import 'assets/styles/hos-header.wxss';
@import 'assets/styles/settlement.wxss';
@import 'assets/styles/dish-detail-item.wxss';

page {
  height: 100%;
  background-color: #f1f1f1;
  width: 100%;
}

.container {
  min-height: 100%;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  box-sizing: border-box;
}

.flex-wrap {
  display: flex;
}

/*.flex-item {
  flex: 1;
}*/

.flex-wrap.flex-direction-col {
  flex-direction: column;
}

.flex-wrap.flex-direction-row {
  flex-direction: row;
}

.flex-wrap.flex-direction-row-reverse {
  flex-direction: row-reverse;
}

.align-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.title-text {
  font-size: 30rpx;
  color: #333;
}

.size-28 {
  font-size: 28rpx;
}

.common-text {
  font-size: 28rpx;
  color: #666;
}

.content-text {
  font-size: 24rpx;
  color: #999;
}

.white-bg {
  background-color: #fff;
}

.single-line {
  width: 90%;
  line-height: 28rpx;
  height: 28rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
}

.border-bottom {
  border-bottom: 1rpx solid #d8d8d8;
}

.width-100 {
  width: 100%;
}

.slide-image {
  width: 100%;
  height: 100%;
  display: inline-block;
  overflow: hidden;
}

.cost-box {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-left: 20rpx;
  margin-right: 20rpx;
  /*width: 100%;*/
  padding-top: 15rpx;
  padding-bottom: 13rpx;
  font-size: 28rpx;
  color: #333;
}

#form-btn {
  background: none;
  border: 0;
  outline: none;
  box-shadow: none;
  padding: 0;
  margin: 0;
}

.pick_datetime {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  overflow: hidden;
  background: #fff;
  z-index: 100;
}

.pick_datetime_tool {
  display: flex;
  justify-content: space-between;
  height: 92rpx;
  line-height: 92rpx;
  border-top: 4rpx solid #eee;
  border-bottom: 4rpx solid #eee;
  padding: 0 20rpx;
}

.pick_datetime_ok {
  font-weight: bold;
}

.pick_datetime_clear {
  color: #666;
}

.pick_datetime picker-view {
  font-size: 34rpx;
}

.pick_datetime_column {
  height: 40px;
  line-height: 40px;
  text-align: center;
}
